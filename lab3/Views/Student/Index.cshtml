@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Student>


    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Department</th>
                <th>CRUD Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6"> No Data</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.Department.Name</td>
                        <td>
            <a asp-action="Details" asp-controller="Student" asp-route-Id="@item.Id" class="btn btn-info">Details</a>|
            <a  asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id"  class="btn btn-danger">Edit</a>|
            <a  asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="Student" class="btn btn-primary"> Create</a>
