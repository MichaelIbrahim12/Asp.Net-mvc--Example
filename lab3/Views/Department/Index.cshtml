
@model IEnumerable<Department>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>CRUD Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4"> No Data</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a href="/Department/Details/@item.ID" class="btn btn-info">Details</a>|
                            <a href="/Department/Edit/@item.ID" class="btn btn-danger">Edit</a>|
                            <a href="/Department/Delete/@item.ID" class="btn btn-danger">Delete</a>
                            <a asp-action="UpdateCourses" asp-route-id="@item.ID" class="btn btn-danger">Update Courses</a>
                            <a asp-action="ShowCourses" asp-route-id="@item.ID" class="btn btn-danger">Show Courses</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="Department" class="btn btn-primary"> Create</a>
</body>
</html>
